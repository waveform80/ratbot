<foo metal:use-macro="view.layout">
<div tal:omit-tag="True" metal:fill-slot="title">${context.comic.title} Issues</div>
<div tal:omit-tag="True" metal:fill-slot="content">
  <header class="spaced">
    <div metal:use-macro="view.nav_bar"></div>
  </header>

  <header>
    <div class="row">
      <div class="small-12 columns">
        <h1>${context.comic.title}</h1>
      </div>
    </div>
  </header>

  <section id="issues">
    <div class="row">
      <div class="small-12 columns">
        <ul class="small-block-grid-2 medium-block-grid-4">
          <li tal:repeat="(issue, page, published) issues" class="comic thumb">
            <span tal:omit-tag="True" tal:condition="has_permission(Permission.view_unpublished) or (published is not None and utcize(published) <= utcnow)">
              <a class="th radius" href="${request.route_url('issue', comic=issue.comic_id, issue=issue.number)}">
                <img tal:condition="page" src="${request.route_url('page_thumb', comic=issue.comic_id, issue=issue.number, page=page)}" />
                <img tal:condition="not page" src="${request.static_url('ratbot:static/unpublished.opt.svg')}" />
              </a>
              <a href="${request.route_url('issue', comic=issue.comic_id, issue=issue.number)}">
                <h5>#${issue.number} - ${issue.title}</h5>
              </a>
              <p>
              <a class="tiny button radius" href="${request.route_url('admin_issue', comic=issue.comic_id, issue=issue.number)}" tal:condition="has_permission(Permission.edit_comic)">Edit</a>
              <a class="tiny button radius" href="${request.route_url('issue_pdf', comic=issue.comic_id, issue=issue.number)}">PDF</a>
              <a class="tiny button radius" href="${request.route_url('issue_archive', comic=issue.comic_id, issue=issue.number)}">Zip</a>
              </p>
            </span>
          </li>
        </ul>
        <a class="small button radius" href="${request.route_url('admin_issue_new', comic=context.comic.id)}" tal:condition="has_permission(Permission.edit_comic)">New Issue</a>
      </div>
    </div>
  </section>

</div>
</foo>


