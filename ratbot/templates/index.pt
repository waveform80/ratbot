<foo metal:use-macro="view.layout">
<div tal:omit-tag="True" metal:fill-slot="title">Home</div>
<div tal:omit-tag="True" metal:fill-slot="content">
  <header id="logo">
    <div class="row">
      <div class="small-12 columns">
        <img src="${request.static_url('ratbot:static/logo.opt.svg')}" width="615" alt="Ratbot Comics Logo" />
      </div>
    </div>
  </header>

  <nav>
    <div class="row">
      <div class="small-12 columns">
        <ul class="small-block-grid-2 medium-block-grid-4">
          <li><a href="${request.route_url('comics')}"><img src="${request.static_url('ratbot:static/comics.opt.svg')}" /> Comics</a></li>
          <li><a href="#"><img src="${request.static_url('ratbot:static/store.opt.svg')}" /> Store</a></li>
          <li><a href="${request.route_url('blog_index', comic='blog')}"><img src="${request.static_url('ratbot:static/blog.opt.svg')}" /> Blog</a></li>
          <li><a href="${request.route_url('bio')}"><img src="${request.static_url('ratbot:static/bio.opt.svg')}" /> Bio</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <section id="latest">
    <div class="row">
      <div class="small-12 columns">
        <h2>Latest comics</h2>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-6">
          <li tal:repeat="issue latest_issues">
            <a class="th radius" href="${request.route_url('blog_issue', comic='blog', issue=issue.number) if issue.comic_id == 'blog' else request.route_url('issue', comic=issue.comic_id, issue=issue.number)}">
              <img src="${request.route_url('issue_thumb', comic=issue.comic_id, issue=issue.number)}" width="100" />
            </a>
          </li>
        </ul>
      </div>
    </div>
  </section>

  <section id="auth">
    <div class="row">
      <div class="small-12 columns" tal:condition="not request.user">
        <h2>Login</h2>
        <a href="${login_url(request, 'facebook')}">
          <img src="${request.static_url('ratbot:static/Facebook.opt.svg')}"
            width="48" alt="Login with Facebook" title="Login with Facebook" />
        </a>
        <a href="${login_url(request, 'google')}">
          <img src="${request.static_url('ratbot:static/Google+.opt.svg')}"
            width="48" alt="Login with Google+" title="Login with Google+" />
        </a>
        <a href="#">
          <img src="${request.static_url('ratbot:static/Twitter.opt.svg')}"
            width="48" alt="Login with Twitter" title="Login with Twitter" />
        </a>
        <a href="#">
          <img src="${request.static_url('ratbot:static/LinkedIn.opt.svg')}"
            width="48" alt="Login with LinkedIn" title="Login with LinkedIn" />
        </a>
      </div>
      <div class="small-12 columns" tal:condition="request.user">
        <h2>Logged in as: ${request.user.name}</h2>
        <a href="${request.route_url('admin_index')}" tal:condition="view.has_permission(Permission.view_admin)">
          <img src="${request.static_url('ratbot:static/Administration.opt.svg')}"
            width="48" alt="Administration" title="Administration" />
        </a>
        <a href="${request.route_url('logout')}">
          <img src="${request.static_url('ratbot:static/Logout.opt.svg')}"
            width="48" alt="Logout" title="Logout" />
        </a>
      </div>
    </div>
  </section>
</div>
</foo>
