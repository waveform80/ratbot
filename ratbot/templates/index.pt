<foo metal:use-macro="view.layout">
<div tal:omit-tag="True" metal:fill-slot="title">Home</div>
<div tal:omit-tag="True" metal:fill-slot="content">
  <header id="logo">
    <div class="row">
      <div class="small-12 columns">
        <img src="${request.static_url('ratbot:static/logo.png')}" width="615" height="446" alt="Logo" />
      </div>
    </div>
  </header>

  <nav metal:define-macro="nav-bar">
    <div class="row">
      <div class="medium-3 columns"><a href="#"><img src="${request.static_url('ratbot:static/comics.png')}" /> Comics</a></div>
      <div class="medium-3 columns"><a href="#"><img src="${request.static_url('ratbot:static/store.png')}" /> Store</a></div>
      <div class="medium-3 columns"><a href="#"><img src="${request.static_url('ratbot:static/blog.png')}" /> Blog</a></div>
      <div class="medium-3 columns"><a href="${request.route_url('bio')}"><img src="${request.static_url('ratbot:static/bio.png')}" /> Bio</a></div>
    </div>
  </nav>

  <section id="comics">
    <div class="row">
      <div class="small-12 columns">
        <h2>Latest comics</h2>
      </div>
    </div>
    <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-6">
      <li tal:repeat="issue latest_issues">
        <a class="th radius" href="${request.route_url('issue', comic=issue.comic_id, issue=issue.number)}">
          <img src="${request.route_url('issue_thumb', comic=issue.comic_id, issue=issue.number)}" width="100" />
        </a>
      </li>
    </ul>
  </section>
</div>
</foo>
