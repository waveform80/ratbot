<foo metal:use-macro="view.layout">
<div tal:omit-tag="True" metal:fill-slot="title">User</div>
<div tal:omit-tag="True" metal:fill-slot="content">
  <header class="spaced">
    <div metal:use-macro="view.nav_bar"></div>
  </header>

  <section>
    ${form.begin(id='user', inline=False)}
    <div class="row">
      <div class="medium-6 columns">
        ${form.label('id', 'User ID')}
        ${form.email('id', placeholder='someone@somewhere.org')}
        ${form.error_small('id')}
      </div>

      <div class="medium-6 columns">
        ${form.label('name', 'Display Name')}
        ${form.email('name', placeholder='Name')}
        ${form.error_small('name')}
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        ${form.checkbox('admin', label=' User is a site administrator', value=1)}
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        ${form.submit('submit', class_='small')}
      </div>
    </div>

    ${form.end()}
  </section>

  <br />
</div>
</foo>



