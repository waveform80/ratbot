<foo metal:use-macro="view.layout">
<div tal:omit-tag="True" metal:fill-slot="title">Blog</div>
<div tal:omit-tag="True" metal:fill-slot="content">
  <header>
    <div metal:use-macro="view.nav_bar"></div>
  </header>

  <div class="row">
    <div class="medium-8 columns">
      <div metal:use-macro="view.flashes"></div>

      <section id="blog">
        <h2>${context.issue.title}</h2>
        <span tal:omit-tag="True" tal:condition="has_permission(Permission.edit_comic)">
          <a class="small button radius" href="${request.route_url('admin_issue', comic='blog', issue=context.issue.number)}">Edit Month</a>
          <a class="small button radius" href="${request.route_url('admin_issue_new', comic='blog')}">New Month</a>
        </span>

        <div tal:repeat="page pages">
          <span tal:omit-tag="True" tal:condition="has_permission(Permission.view_unpublished) or (page.published is not None and page.published <= utcnow)">
            <div class="lsf-icon" title="calendar">
              <a id="${'page%d' % page.number}" name="${'page%d' % page.number}"></a>
              <span title="">${page.created.strftime('%d %b %Y')}</span>
            </div>
            ${markup.render(page.markup, page.description)}
            <img src="${request.route_url('page_bitmap', comic=page.comic_id, issue=page.issue_number, page=page.number)}">
          </span>
        </div>
      </section>
    </div>

    <div class="medium-4 columns">
      <div class="panel header-flush">
        <h3>Other Posts</h3>
        <section id="bloglist">
          <ul class="side-nav">
            <li tal:repeat="(issue, published) issues">
            <a
              tal:condition="has_permission(Permission.view_unpublished) or (published is not None and utcize(published) <= utcnow)"
              tal:attributes="class 'active' if context.issue == issue else None"
              href="${request.route_url('blog_issue', comic=issue.comic_id, issue=issue.number)}">${issue.title}</a>
            </li>
          </ul>
        </section>
      </div>
    </div>
  </div>

  <br />
</div>
</foo>


